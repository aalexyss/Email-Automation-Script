# --- SMTP (choose one block and fill it in) ---

# Gmail (requires 2FA + App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=starttls
SMTP_USER=your@gmail.com
SMTP_PASS=APP_PASS

# ABV.bg (SSL on port 465)
SMTP_HOST=smtp.abv.bg
SMTP_PORT=465
SMTP_SECURE=ssl
SMTP_USER=your@abv.bg
SMTP_PASS=your_account_password


# --- Who are you sending from? ---
FROM_NAME=Your Name
FROM_EMAIL=from@gmail.com
REPLY_TO=from@gmail.com

# --- Contents ---
SUBJECT=Hi ${name}, quick note from ${company}

# --- Restrictions ---
# Emails per minute (realistically 10â€“20 for personal emails)
RATE_LIMIT_PER_MIN=15

# Number of retries for temporary errors
MAX_RETRIES=3

# --- Attached file (optional) ---
# Empty = no attachment
# Example: ATTACHMENT_PATH=attachments/example.txt
ATTACHMENT_PATH=

# --- Unsubscribe (optional) ---
UNSUBSCRIBE_MAILTO=unsubscribe@yourdomain.com
UNSUBSCRIBE_URL=https://yourdomain.com/unsub?email=${email}
SUPPRESSIONS_FILE=suppressions.txt
